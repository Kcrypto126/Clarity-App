{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"baseUrl": ".",
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["./*"]
		},
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts",
		"types/**/*.d.ts"
	],
	"extends": "expo/tsconfig.base"
}
